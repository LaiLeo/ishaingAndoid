<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="42dp"
    tools:background="#fff"
    android:paddingStart="32dp"
    android:paddingLeft="32dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp">
    <TextView
        android:id="@+id/number_picker_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:paddingLeft="6dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:ems="4"
        android:lines="1"
        android:ellipsize="end"
        tools:text="物資名稱"
        android:textSize="18sp"
        android:textColor="#000"
        android:includeFontPadding="false" />
    <ImageView
        android:id="@+id/number_picker_add"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:paddingStart="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:src="@drawable/ic_add_circle"
        />
    <EditText
        android:id="@+id/number_picker_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:ems="3"
        tools:text="123"
        android:inputType="number"
        android:textSize="16sp"
        android:textColor="#000"
        android:includeFontPadding="false"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/edittext_with_border_bg"/>
    <ImageView
        android:id="@+id/number_picker_remove"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/ic_remove_circle"
        />
    <TextView
        android:id="@+id/number_picker_tail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:lines="1"
        android:ellipsize="end"
        tools:text="剩餘13個"
        android:textSize="18sp"
        android:textColor="#000"
        android:includeFontPadding="false" />
</LinearLayout>