<?xml version="1.0" encoding="utf-8"?>
<uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/fragment_pull_to_refresh_list_ptrl"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<TextView
        android:id="@+id/fragment_pull_to_refresh_list_tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/twmf_black"
        android:textSize="20sp"
        android:text="@string/event_list_empty"
        android:visibility="gone" />

	<ListView
	    android:id="@+id/fragment_pull_to_refresh_list_listview"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:divider="@color/twmf_orange"
		android:dividerHeight="1dp" />
	
</uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>