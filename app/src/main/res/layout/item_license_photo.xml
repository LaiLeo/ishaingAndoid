<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/item_rl_root"
	android:layout_height="150dp"
	android:layout_width="120dp"
	>
	<ImageView
		android:id="@+id/item_iv_image"
		android:layout_width="150dp"
		android:maxWidth="150dp"
		android:maxHeight="100dp"
		android:layout_height="100dp"
		android:src="@drawable/default_user_icon"
		android:background="@color/twmf_white"
		android:padding="8dp"
		android:layout_margin="10dp"/>
	<TextView
		android:id="@+id/item_tv_delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="4dp"
		android:background="@drawable/bg_user_skill_or_interest_item"
		android:layout_alignParentRight="true"
		android:layout_marginRight="0dp"
		android:textColor="@color/twmf_white"
		android:singleLine="true"
		android:text="@string/x"
		android:textSize="22sp"
		android:visibility="gone"/>
</RelativeLayout>
