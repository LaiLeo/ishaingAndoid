<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/userprofile_event_list_item_rl"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
        
	    <ImageView
	        android:id="@+id/userprofile_event_list_item_iv_image"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:scaleType="centerCrop"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@id/userprofile_event_list_item_iv_image"
	        android:layout_marginLeft="16dp"
	        android:orientation="vertical" >
	        
	        <TextView
		        android:id="@+id/userprofile_event_list_item_tv_subject"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:maxWidth="200dp"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="#1F2020"
		        android:textSize="20sp" />
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        
	            <!--time label-->
			    <ImageView
			        android:id="@+id/userprofile_event_list_item_iv_clock_icon"
			        android:layout_width="25dp"
			        android:layout_height="25dp"
			        android:src="@drawable/ic_clock" />
			
			    <TextView
			        android:id="@+id/userprofile_event_list_item_tv_time"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#787879" />
			    
			    <TextView
			        android:id="@+id/userprofile_event_list_item_tv_time_countdown"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="16dp"
			        android:textColor="#FF0000" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
			    
	            <!--address label-->
			    <ImageView
			        android:id="@+id/userprofile_event_list_item_iv_address_icon"
			        android:layout_width="25dp"
			        android:layout_height="25dp"
			        android:src="@drawable/ic_address" />
			
			    <TextView
			        android:id="@+id/userprofile_event_list_item_tv_address_city"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#787879" />
			    <TextView
			        android:id="@+id/userprofile_event_list_item_tv_address"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:maxWidth="150dp"
			        android:ellipsize="end"
			        android:singleLine="true"
			        android:textColor="#787879" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
			    
	            <!--volunteer label-->
		    <ImageView
		        android:id="@+id/userprofile_event_list_item_iv_volunteer_icon"
		        android:layout_width="25dp"
		        android:layout_height="25dp"
		        android:src="@drawable/ic_man" />
		
		    <TextView
		        android:id="@+id/userprofile_event_list_item_tv_volunteer"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#787879" />
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	
	    <ImageView
			android:id="@+id/userprofile_event_list_item_iv_isneedensurance"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:src="@drawable/ic_ensurance" />
	    
	</RelativeLayout>
	    
    <View
        android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#FF8C37" />
    
    <RelativeLayout
        android:id="@+id/userprofile_event_list_item_rl_rating"
        android:layout_width="match_parent"
        android:layout_height="60dp" >
        <TextView
            android:id="@+id/userprofile_event_list_item_tv_2"
            android:layout_width="80dp"
        	android:layout_height="fill_parent"
        	android:layout_alignParentLeft="true"
        	android:padding="6dp"
        	android:gravity="center_vertical"
        	android:background="@drawable/ic_rating_left"
        	android:textColor="#FEFEFE"
        	android:textSize="16sp"
        	android:text="我要評分" />
        <RatingBar
            android:id="@+id/userprofile_event_list_item_rb_rating"
            style="@style/TwmfRatingBarMedium"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:numStars="5" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" >
            <TextView
	            android:id="@+id/userprofile_event_list_item_tv_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#1F2020"
	            android:textSize="14sp"
	            android:text="共"
	             />
	        <TextView
	            android:id="@+id/userprofile_event_list_item_tv_rating_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FF8C37"
	            android:text="100"
	             />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#1F2020"
	            android:textSize="14sp"
	            android:text="人給予評分"
	             />
        </LinearLayout>
        <TextView
            android:id="@+id/userprofile_event_list_item_tv_rating_score"
            android:layout_width="80dp"
        	android:layout_height="fill_parent"
        	android:gravity="center"
        	android:layout_alignParentRight="true"
        	android:padding="6dp"
        	android:background="@drawable/ic_rating_right"
        	android:textColor="#FEFEFE"
        	android:textSize="20sp"
        	android:text="分" /> 
	</RelativeLayout>
    
    <!-- for npo detail view -->
    <TextView
        android:id="@+id/userprofile_event_list_item_tv_event_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>