<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_base_simple_actionbar_ll_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/twmf_white"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/fragment_base_simple_actionbar_ll_actionbar"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/twmf_orange"
	    android:orientation="horizontal"
	    android:paddingTop="12dp"
	    android:paddingBottom="12dp"
	    android:paddingLeft="6dp"
	    android:paddingRight="6dp" >
	    <ImageView
	        android:id="@+id/fragment_base_simple_actionbar_iv_back"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/ic_back" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_base_simple_actionbar_fl_content"
        android:layout_width="match_parent"
	    android:layout_height="fill_parent" />

</LinearLayout>